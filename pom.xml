<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>christian-draeger</groupId>
    <artifactId>basic-selenium-project</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <properties>
	        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	        <browser.name>chrome</browser.name>
	        <failsafe.rerunFailingTestsCount>2</failsafe.rerunFailingTestsCount>
 			<httpclient.version>4.5.6</httpclient.version>
			<javalin.version>2.5.0</javalin.version>
			<okhttp.version>3.12.1</okhttp.version>
			<!--  <junit.version>4.12</junit.version>-->
			<hamcrest.version>1.3</hamcrest.version>
			<jmockit.version>1.30</jmockit.version>
			<mockserver.version>3.12</mockserver.version>
			<selenium-java.version>3.141.59</selenium-java.version>
			<phantomjsdriver.version>1.4.4</phantomjsdriver.version>
			<htmlunit-driver.version>2.30.1</htmlunit-driver.version>
			<guava.version>27.0.1-jre</guava.version>
			<mockito-core.version>2.23.4</mockito-core.version>
			<maven-release-plugin.version>2.5.3</maven-release-plugin.version>
			<maven-surefire-plugin.version>2.21.0</maven-surefire-plugin.version>
			<jacoco-maven-plugin.version>0.8.1</jacoco-maven-plugin.version>
			<maven-gpg-plugin.version>1.6</maven-gpg-plugin.version>
			<exec-maven-plugin.version>1.6.0</exec-maven-plugin.version>
			<maven-jar-plugin.version>3.0.2</maven-jar-plugin.version>
			<java.version>1.8</java.version>
			<maven.compiler.target>${java.version}</maven.compiler.target>
			<maven.compiler.source>${java.version}</maven.compiler.source>
			<project.encondig>UTF-8</project.encondig>
			<project.build.sourceEncoding>${project.encondig}</project.build.sourceEncoding>
			<project.reporting.outputEncoding>${project.encondig}</project.reporting.outputEncoding>
			<wdm.mainClass>io.github.bonigarcia.wdm.WebDriverManager</wdm.mainClass>
    </properties>
		<dependencies>
		    <dependency>
			    <groupId>org.testng</groupId>
			    <artifactId>testng</artifactId>
			    <version>6.14.3</version>
			    <scope>test</scope>
            </dependency>

            <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>3.0.0</version>
        </dependency>
        <dependency>
            <groupId>io.github.bonigarcia</groupId>
            <artifactId>webdrivermanager</artifactId>
            <version>1.4.10</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <version>2.0.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.21</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.1.7</version>
        </dependency>

        </dependencies>
    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </testResource>
        </testResources>
        <plugins>
        	<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M3</version>
                 <dependencies>

    </dependencies>
                <configuration>


                    <forkCount>0</forkCount>
                    <reuseForks>true</reuseForks>
                    <testFailureIgnore>true</testFailureIgnore>

                    <suiteXmlFiles>
                        <!--<suiteXmlFile>src/test/resources/suites/suites-test-testng.xml</suiteXmlFile>-->
                        <suiteXmlFile>src/test/resources/suites/${suiteXmlFile}</suiteXmlFile>
                    </suiteXmlFiles>

                </configuration>

            </plugin>
            <!--<plugin>-->
                <!--<artifactId>maven-surefire-plugin</artifactId>-->
                <!--<configuration>-->
                    <!--<systemPropertyVariables>-->
                        <!--<remote>false</remote>-->
                    <!--</systemPropertyVariables>-->
                    <!--<includes>-->
                        <!--<include>**/*Test.java</include>-->
                    <!--</includes>-->
                <!--</configuration>-->
            <!--</plugin>-->
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.19.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <forceJavacCompilerUse>true</forceJavacCompilerUse>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>browser-phantomjs</id>
            <properties>
                <browser.name>phantomjs</browser.name>
            </properties>
        </profile>
        <profile>
            <id>browser-chrome</id>
            <properties>
                <browser.name>chrome</browser.name>
            </properties>
        </profile>
        <profile>
            <id>browser-firefox</id>
            <properties>
                <browser.name>firefox</browser.name>
            </properties>
        </profile>
        <profile>
            <id>browser-edge</id>
            <properties>
                <browser.name>edge</browser.name>
            </properties>
        </profile>
        <profile>
            <id>browser-internetExplorer</id>
            <properties>
                <browser.name>internetexplorer</browser.name>
            </properties>
        </profile>
        <profile>
            <id>browser-opera</id>
            <properties>
                <browser.name>opera</browser.name>
            </properties>
        </profile>
    </profiles>
</project>
